const express = require('express');
const router = express.Router();

router.get('/test', (req, res) => {
  try {
    res.send('Test route berhasil!');
  } catch (err) {
    console.error('Test route error:', err);
    res.status(500).send('Test error');
  }
});

router.get('/test-view', (req, res) => {
  try {
    res.render('minimal');
  } catch (err) {
    console.error('Test view error:', err);
    res.status(500).send('View render error');
  }
});

module.exports = router;